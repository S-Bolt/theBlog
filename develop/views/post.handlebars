<div class="post-container">
    <!-- rendering post data-->
    <h1>{{title}}</h1>
    <div class="post-content">
        <p>{{content}}</p>
        <p>by {{user.username}}</p>   
    </div>
    
      <!-- show comments if there are any -->
        {{#if comments}}
        <div class="comments">
            <h2>Comments</h2>
             <ul>
                {{#each comments}}
                <li>
                    <p>{{content}}</p>
                    <p>By {{user.username}}</p>
                    <p>Created at {{formatDate createdAt}}</p>
                </li>
                {{/each}}
             </ul>
        </div>
        {{/if}}


    <!-- if logged in present comment ability -->
    {{#if logged_in}}
    <div class="leave-comment">
        <div class="comment-header"> 
            <h3>Leave a comment</h3>
        </div>
        <form id="new-comment-form">
             <input type="hidden" id="post-id" name="post-id" value="{{id}}">
             <textarea id="comment-text" name="content" rows="3" placeholder="Write comment here"></textarea>
             <button type="submit" class="btn">Submit Comment</button>
        </form>
    </div>
    {{/if}}

  

</div>

 <script src="/js/comment.js"></script>