<div class="posts">
    {{#if posts.length}}

    <ul>
        {{#each posts}}
         <li>
            <a href="/post/{{id}}">
            <h2>{{title}}</h2>
            </a>
            <p>{{content}}</p>
         </li>
         {{/each}}
    </ul>
   

    {{else}}
        <p>No post found!</p>
    {{/if}}    
</div>